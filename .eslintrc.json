{
  "extends": ["@squarecloud/eslint-config/node"],
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "no-useless-constructor": "off",
    "no-use-before-define": "off",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "ignorePatterns": ["out", "dist", "**/*.d.ts"]
}
