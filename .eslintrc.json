{
  "extends": ["@squarecloud/eslint-config/node"],
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/naming-convention": "off",
    "curly": "warn",
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "no-useless-constructor": "off"
  },
  "ignorePatterns": ["out", "dist", "**/*.d.ts"]
}
