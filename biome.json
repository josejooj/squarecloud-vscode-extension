{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": ["./node_modules/**", "./dist/**"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": { "noExplicitAny": "off" },
			"style": { "noParameterAssign": "off" }
		}
	},
	"formatter": {
		"enabled": true
	},
	"json": {
		"parser": { "allowComments": true }
	}
}
