{
  "name": "squarecloud",
  "displayName": "SquareCloud",
  "icon": "resources/squarecloud.logo",
  "description": "An extension to easily interact with the SquareCloud API.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "squarecloud.refreshCache",
          "when": "false"
        },
        {
          "command": "squarecloud.refreshEntry",
          "when": "false"
        },
        {
          "command": "squarecloud.showLogs",
          "when": "false"
        },
        {
          "command": "squarecloud.copyText",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "squarecloud.refreshCache",
          "when": "view == bots-view || view == sites-view || view == user-view",
          "group": "navigation"
        },
        {
          "command": "squarecloud.setApiKey",
          "when": "view == bots-view || view == sites-view || view == user-view"
        }
      ],
      "view/item/context": [
        {
          "command": "squarecloud.refreshEntry",
          "when": "viewItem == square-bot || viewItem == square-site",
          "group": "inline"
        },
        {
          "command": "squarecloud.showLogs",
          "when": "viewItem == square-bot || viewItem == square-site",
          "group": "inline"
        },
        {
          "command": "squarecloud.copyText",
          "when": "viewItem == generic",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "squarecloud.setApiKey",
        "title": "%command.setApiKey%",
        "category": "Square Cloud"
      },
      {
        "command": "squarecloud.refreshCache",
        "title": "%command.refresh%",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "squarecloud.refreshEntry",
        "title": "%command.refresh%",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "squarecloud.showLogs",
        "title": "%command.showLogs%",
        "icon": {
          "light": "resources/light/logs.svg",
          "dark": "resources/dark/logs.svg"
        }
      },
      {
        "command": "squarecloud.copyText",
        "title": "%command.copyText%",
        "icon": {
          "light": "resources/light/copy.svg",
          "dark": "resources/dark/copy.svg"
        }
      },
      {
        "command": "squarecloud.startEntry",
        "title": "%command.start%"
      },
      {
        "command": "squarecloud.stopEntry",
        "title": "%command.stop%"
      },
      {
        "command": "squarecloud.restartEntry",
        "title": "%command.restart%"
      },
      {
        "command": "squarecloud.deleteEntry",
        "title": "%command.delete%"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "squarecloud-container",
          "title": "Square Cloud",
          "icon": "resources/squarecloud.svg"
        }
      ]
    },
    "views": {
      "squarecloud-container": [
        {
          "id": "bots-view",
          "name": "Bots"
        },
        {
          "id": "sites-view",
          "name": "Websites"
        },
        {
          "id": "user-view",
          "name": "%view.user.title%",
          "visibility": "collapsed"
        }
      ]
    },
    "configuration": [
      {
        "title": "SquareCloud",
        "properties": {
          "squarecloud.apiKey": {
            "title": "SquareCloud API Key.",
            "type": "string",
            "markdownDescription": "%config.apiKey.description%"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@squarecloud/api": "link:..\\..\\Packages\\squarecloud-api",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "vscode-ext-localisation": "^1.0.1",
    "webpack": "^5.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/squarecloudofc/vscode-extension"
  },
  "dependencies": {
    "pretty-ms": "7.0.1"
  }
}
